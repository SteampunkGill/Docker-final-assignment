<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mall.module.cart.mapper.CartMapper">

    <!-- 定义一个resultMap来手动映射连表查询的结果 -->
    <resultMap id="CartWithProductMap" type="com.example.mall.module.cart.entity.Cart">
        <!-- 映射Cart自己的字段 -->
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="productId" column="product_id"/>
        <result property="quantity" column="quantity"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>

        <!-- 映射关联的Product对象 -->
        <association property="product" javaType="com.example.mall.module.product.entity.Product">
            <result property="name" column="product_name"/>
            <result property="price" column="product_price"/>
            <result property="imageUrl" column="product_image_url"/>
        </association>
    </resultMap>

    <!-- 根据用户ID查询购物车列表（包含商品详情） -->
    <select id="selectCartListByUserId" resultMap="CartWithProductMap">
        SELECT
            c.id, c.user_id, c.product_id, c.quantity, c.create_time, c.update_time,
            p.name AS product_name,
            p.price AS product_price,
            p.image_url AS product_image_url
        FROM
            carts c
                JOIN
            products p ON c.product_id = p.id
        WHERE
            c.user_id = #{userId}
    </select>

</mapper>